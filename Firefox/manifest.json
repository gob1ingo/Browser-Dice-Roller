{
  "manifest_version": 2,
  "name": "Dice Roller",
  "version": "1.0",
  "description": "A simple dice roller extension for Firefox",

  "permissions": [],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Dice Roller",
    "default_icon": {
      "16": "icons/dice_emoji16.png",
      "32": "icons/dice_emoji32.png",
      "48": "icons/dice_emoji48.png",
      "128": "icons/dice_emoji128.png"
    }
  },

  "icons": {
    "16": "icons/dice_emoji16.png",
    "32": "icons/dice_emoji32.png",
    "48": "icons/dice_emoji48.png",
    "128": "icons/dice_emoji128.png"
  }
}